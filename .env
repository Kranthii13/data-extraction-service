# Docker Environment Configuration
# Copy this to .env for Docker deployment

# Application Configuration
APP_HOST_PORT=8000
HOST=0.0.0.0
PORT=8000
RELOAD=false
LOG_LEVEL=info
LOG_TO_FILE=false

# PostgreSQL Database Configuration
# Using host.docker.internal to connect to local PostgreSQL from Docker
POSTGRES_HOST=host.docker.internal
POSTGRES_PORT=5432
POSTGRES_DB=filedb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# OCR Configuration for Image Text Extraction
# These settings are optimized for Docker environment
OCR_ENABLED=true
OCR_CONFIDENCE_THRESHOLD=0.1
OCR_ENHANCE_CONTRAST=true
OCR_ENHANCE_SHARPNESS=true
OCR_MIN_IMAGE_SIZE=300
OCR_LANGUAGES=eng
OCR_INCLUDE_CONFIDENCE=false
OCR_MARK_IMAGE_TEXT=true

# Production Scaling (Optional)
# Redis Configuration for Celery
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Performance Optimization
FAST_MODE=true
SKIP_TABLE_EXTRACTION_FOR_LARGE_FILES=true
MAX_FILE_SIZE_FOR_TABLES=5242880